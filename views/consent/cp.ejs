	<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
	
	<script type="text/javascript">
		
		// ensure answer is not preselected
		function refreshPage(){
			$("input:radio[name='consent']").each(function(i) {
			  this.checked = false;
			});
		}
		
		function proceed(){
			var value = $('input[name=consent]:checked', '#response').val();
			console.log(value);
			// ensure a value has been selected
			if(typeof value === 'undefined'){
				$( "#popup" ).dialog({
					autoOpen: true,
					resizable: false,
					position: { my: "left bottom", at: "left+100 bottom-100", of: '#pb' },
				    height: 300,
				    width: 300,
				    
				    modal: true,
				    buttons: {
				        "OK": function() {
				          $( this ).dialog( "close" );
					    }
				    }
				});
				
				$( "#popup" ).html(
					'<h5 class="center">Please select option</h5> <p><h4 class="center">' +
					'"I agree to participate"</h4></p>  <h5 class="center">if you wish to proceed!</h5>'
				);
				
			}else if (value == 1){
				//login();
				generateUserName();
			}else{
				$( "#popup" ).dialog({
					autoOpen: true,
					resizable: false,
					position: { my: "left bottom", at: "left+100 bottom-100", of: '#pb' },
				    height: 350,
				    width: 300,
				    
				    modal: true,
				    buttons: {
				        "OK": function() {
				          $( this ).dialog( "close" );
					    }
				    }
				});
				
				$( "#popup" ).html(
					'<h5 class="center">You selected</h5> <p><h4 class="center">' +
					'"I do not wish to participate"</h4></p>  <h5 class="center">Please close your browser!</h5>'
				);
			
			}
		}
		
		function login(){
			var location = "<%=sails.getBaseUrl()%>/page/login";
			window.location.href = location ;
		}
		
		function generateUserName(){
			var location = "<%=sails.getBaseUrl()%>/user/displayCreateUserPage";
			window.location.href = location ;
		}

		
		$( document ).ready(function() {
	    	refreshPage();
		});
		
		
	</script>	
	
</head>
